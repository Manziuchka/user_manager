<% if user_signed_in? %>
  <h1><%= @user.name %></h1>

  <p><%= @user.email %></p>

  <%= link_to 'Редактировать', edit_admin_user_path(@user) %>
  <%= link_to 'Удалить', user_path(@user), method: :delete, data: { confirm: "Вы уверены?" }%>
<% else %>
    <h1>Пожалуйста, авторизуйтесь</h1>
<% end %>