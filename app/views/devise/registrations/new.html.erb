<h2>Регистрация</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %> 
 
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col-sm-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control'%>
  </div>

  <div class="col-sm-3">
    <%= f.label "Пароль" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> символов минимум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="col-sm-3">
  <p>
    <%= f.label "Подтверждение пароля" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %></p>
  </div>

  <div class="actions">
    <%= f.submit "Регистрация", class: 'btn btn-success' %>
  </div>
<% end %>