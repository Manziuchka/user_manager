<!DOCTYPE html>
<html>
  <head>
    <title>UserManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <% if user_signed_in? %>
    <%= link_to 'Начальная страница', home_path %>
     <li class="nav-item">
        <%= link_to "Выход", destroy_user_session_path, method: :delete, class: "nav-link" %>
      </li>
     <% if (current_user.admin == true) %>
       <%= link_to 'Создать пользователя', new_admin_user_path %>
     <% end %>
     <% else %>
      <li class="nav-item">
        <%= link_to "Вход", new_user_session_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Регистрация", new_user_registration_path, class: "nav-link" %>
      </li>
    <% end %>
   <p class="notice"><%= notice %></p>
   <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
