<!DOCTYPE html>
<html>
  <head>
    <title>UserManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
    a{color:#000000}a:hover{color:#000000; text-decoration:none}
    </style>
  </head>

  <body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-normal"><%= link_to 'User-manager', home_path %></h5>
    <% if user_signed_in? %> 
      <% if (current_user.admin == true) %>
        <nav class="my-2 my-md-0 mr-md-3">
          <span class="btn btn-outline-primary"><%= link_to 'Создать пользователя', new_admin_user_path %></span>
        </nav>
      <% end %>
    <% end %>
    <% if user_signed_in? %>
      <nav class="my-2 my-md-0 mr-md-3">
        <span class="btn btn-outline-primary"><%= link_to "Выход", destroy_user_session_path, method: :delete %></span>
      </nav>
    <% else %>
      <nav class="my-2 my-md-0 mr-md-3">
        <span class="btn btn-outline-primary"><%= link_to "Вход", new_user_session_path %></span>
      </nav>
      <span class="btn btn-outline-primary"><%= link_to "Регистрация", new_user_registration_path %></span>
    <% end %>
</div>




  
  
   <p class="notice"><%= notice %></p>
   <p class="alert"><%= alert %></p>
   <div class="container">
    <%= yield %>
   </div>
  </body>
</html>
